<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.softworks.joongworld.post.repository.PostMapper">

    <resultMap id="PostSummaryViewMap" type="com.softworks.joongworld.post.dto.PostSummaryView">
        <constructor>
            <idArg column="id" javaType="java.lang.Long"/>
            <arg column="title" javaType="java.lang.String"/>
            <arg column="price" javaType="java.lang.Integer"/>
            <arg column="region" javaType="java.lang.String"/>
            <arg column="createdAt" javaType="java.time.OffsetDateTime"/>
            <arg column="thumbnailUrl" javaType="java.lang.String"/>
            <arg column="safePay" javaType="java.lang.Boolean"/>
        </constructor>
    </resultMap>

    <resultMap id="PostDetailViewMap" type="com.softworks.joongworld.post.dto.PostDetailView">
        <constructor>
            <idArg column="id" javaType="java.lang.Long"/>
            <arg column="title" javaType="java.lang.String"/>
            <arg column="category" javaType="java.lang.String"/>
            <arg column="price" javaType="java.lang.Integer"/>
            <arg column="condition" javaType="java.lang.String"/>
            <arg column="region" javaType="java.lang.String"/>
            <arg column="safePay" javaType="java.lang.Boolean"/>
            <arg column="description" javaType="java.lang.String"/>
            <arg column="createdAt" javaType="java.time.OffsetDateTime"/>
            <arg column="images" javaType="java.util.List"
                 typeHandler="com.softworks.joongworld.global.mybatis.handler.StringListTypeHandler"/>
        </constructor>
    </resultMap>

    <select id="findRecentSummaries" resultMap="PostSummaryViewMap">
        select id,
               title,
               price,
               region,
               created_at as createdAt,
               thumbnail_url as thumbnailUrl,
               safe_pay as safePay
        from post
        order by created_at desc
        limit #{limit}
    </select>

    <select id="findDetailById" resultMap="PostDetailViewMap">
        select id,
               title,
               category,
               price,
               condition_text as condition,
               region,
               safe_pay as safePay,
               description,
               created_at as createdAt,
               image_urls as images
        from post
        where id = #{postId}
    </select>

</mapper>
